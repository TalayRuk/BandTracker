@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_myLayoutPage.cshtml";
}

<h2>Band Update @Model.GetName()</h2>

<form action="/bands/@Model.GetId()" method="post">
  <input type="hidden" name="_method" value="PATCH">
  <label for="band_name">Edit Band Name: </label>
  <input type="text" name="band_name" required>
  <button type="submit" name="button">Edit this Band</button>
</form>

<a href="/bands/@Model.GetId()">Back to this band page</a>

<hr>
<h2>Venue Update @Model.GetName()</h2>

<form action="/venues/@Model.GetId()" method="post">
  <input type="hidden" name="_method" value="PATCH">
  <label for="venue_name">Edit Venue Name: </label>
  <input type="text" name="venue_name" required>
  <button type="submit" name="button">Edit this Venue</button>
</form>

<a href="/venues/@Model.GetId()">Back to this venue page</a>
