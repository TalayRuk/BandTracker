<link rel="stylesheet" href="../content/styles.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
<body>
  <h1>BAND TRACKER</h1>
  <hr />
  <h2>Venues:</h2>
  @if (Model.Count != 0)
  {
    <ul>
      @foreach (var venue in Model)
      {
        <li>
          <a href="/venues/@venue.GetId()">@venue.GetName()</a> |
          <a href="/venues/@venue.GetId()/update">Update</a> |
          <a href="/venues/@venue.GetId()/delete">Delete</a>
        </li>
      }
    </ul>
  }
  else
  {
    <h3>No Current Venues!</h3>
  }
  <br>
  <form action="/venues/new" method="post">
    <label for="venue-name">Venue Name:</label>
    <input type="text" name="venue-name">
    <button type="submit">Add</button>
  </form>
  <br>

  <h2><a href="/">Back to Main Page</a></h2>
</body>
